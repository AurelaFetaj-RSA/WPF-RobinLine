                            <TranslateTransform Y="-113"/>
                        </ToggleButton.RenderTransform>
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid Width="40" Height="17">
                                    <!-- Adjusted Grid size -->
                                    <!-- Background Border -->
                                    <Border x:Name="ToggleBackground"
                                        Width="40" Height="17" 
                                        CornerRadius="8"
