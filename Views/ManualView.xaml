                                         Width="15" Height="15"  
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2, 0, 0, 0">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform x:Name="ThumbTransform"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
