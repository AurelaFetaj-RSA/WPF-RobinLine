                        </ToggleButton.Template>
                    </ToggleButton>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                        <TextBlock x:Name="CentralBeltTextBlock" 
                               Text="Start/Stop"
                               Margin="400, 5, 0, 15"
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </Border>

