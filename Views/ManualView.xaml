                              VerticalAlignment="Bottom"
                              Margin="85, 0, 0, 15"
                              Background="Transparent"
                              Cursor="Hand"
                              BorderThickness="0"
                              PreviewMouseDown="Oven1Toggle_PreviewMouseDown"
                              Click="Oven1LampsToggle_Click">
