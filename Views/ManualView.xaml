            <Border x:Name="ManualMessageBoxPanel"
                BorderThickness="2"
                BorderBrush="Black"
                CornerRadius="5"
                Background="Transparent"
                Width="400"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                Margin="0,230,0,0">
                <Border.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform X="90" />
                        <TranslateTransform Y="0" />
                    </TransformGroup>
                </Border.RenderTransform>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Image x:Name="ManualMessageIcon" 
                           Width="15" 
                           Height="15" 
                           Margin="10,5,5,5"/>
                        <TextBlock x:Name="ManualMessageText" 
                               FontSize="12" 
                               VerticalAlignment="Center" 
                               Margin="5,5,20,5" 
                               TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="✖"
                        Background="Transparent"
                        Foreground="Gray"
                        BorderThickness="0"
                        FontSize="8"
                        Cursor="Hand"
                        Margin="5,0,10,0"
                        Click="CloseMessageBox"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1"/>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>