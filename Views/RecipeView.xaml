             xmlns:viewModel="clr-namespace:WPF_App.ViewModels"
             xmlns:views="clr-namespace:WPF_App.Views" xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Height="600" Width="600">

    <Viewbox Stretch="Uniform">
        <Grid>
            <Border CornerRadius="10"
                    Background="Transparent"
                    Width="500"
                    Height="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,0,0,0">
                <Border.RenderTransform>
                    <TranslateTransform Y="-15"/>
                    <!-- Moves Up -->
                </Border.RenderTransform>

                <Grid>
                    <Border Background="#f1f2f6"
                            CornerRadius="0,0,3,3"
                            Margin="-19,-11,19,11">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              BlurRadius="5"
                                              ShadowDepth="1"
                                              Opacity="0.6"/>
                        </Border.Effect>

                        <!-- Blue line at the top -->
                        <Grid>
                            <Rectangle Height="2"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"
                                       Fill="#4471ce"
                                       RadiusX="3"
                                       RadiusY="3"
                                       Margin="0,-3,0,10"/>
                            <Rectangle RadiusX="6"
                                       RadiusY="6"
                                       Fill="#f2f3f5"/>
                        </Grid>
                    </Border>

                    <TabControl Margin="-21,-17,10,10" Background="Transparent" BorderThickness="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Grid>
                                                <!-- Top border line (visible only when selected) -->
                                                <Rectangle x:Name="TopLine"
                                                           Height="5"  
                                                           HorizontalAlignment="Stretch"
                                                           VerticalAlignment="Top"
                                                           Fill="#f2f3f5"
                                                           RadiusX="2"
                                                           RadiusY="2"
                                                           Margin="0,0,0,0"
                                                           Visibility="Collapsed"/>

                                                <!-- Tab background (changes on selection) -->
                                                <Rectangle x:Name="TabBackground"
                                                               RadiusX="2"
                                                               RadiusY="2"
                                                               Fill="LightGray"
                                                               Margin="0,4,0,0"/>

                                                <ContentPresenter ContentSource="Header"
                                                                          HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Margin="10,1"/>
                                            </Grid>

                                            <!-- Triggers -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="TopLine" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="TabBackground" Property="Fill" Value="#f2f3f5"/>
                                                    <!-- Changes to white when selected -->
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </TabControl.Resources>
