                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="130"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="Production"
                                               Text="Production:"
                                               Grid.Row="0"
                                               Grid.Column="0"
                                               Margin="5,0,10,0"
                                               Foreground="{DynamicResource titleColor7}"
                                               FontWeight="Bold" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>

                                        <TextBlock x:Name="ProductionName"
                                               Text="Currently working on:"
                                               Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="5,0,10,0"
                                               Foreground="{DynamicResource titleColor7}"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               VerticalAlignment="Center"/>
