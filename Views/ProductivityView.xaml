                                <Grid x:Name="FaliurePanel" Visibility="Collapsed"
                                      Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                                    <!-- Adjust position as needed -->
                                    <!--Visibility="Collapsed"-->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="Failure"
                                               Text="Failure Details:" 
                                               Grid.Row="0"
                                               Grid.Column="0"
                                               FontWeight="Bold"
                                               FontSize="12" 
                                               Foreground="{DynamicResource titleColor7}"
                                               Margin="5,0,10,0"
                                               VerticalAlignment="Center"/>

                                    <TextBlock x:Name="FailureName"
                                               Text="Item:"
                                               Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="5,0,10,0"
                                               Foreground="{DynamicResource titleColor7}"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="CurrentFailureItemText"
                                             Grid.Row="1"
                                             Grid.Column="1"
                                             Width="150"
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"/>

                                    <TextBlock x:Name="FailureDesc"
                                               Text="Failure Description:"
                                               Grid.Row="2"
                                               Grid.Column="0"
                                               Margin="5,0,10,0"
                                               Foreground="{DynamicResource titleColor7}"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               VerticalAlignment="Center"/>
                                    <!--<TextBlock x:Name="CurrentFailureDesc"
                                             Grid.Row="2"
                                             Grid.Column="1"
                                             Width="150"
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"/>-->
                                    <TextBlock x:Name="CurrentFailureDesc"
                                               Grid.Row="2"
                                               Grid.Column="1"
                                               Grid.RowSpan="2"
                                               Width="150"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"
                                               Height="Auto"/>

                                    <TextBlock x:Name="FailureSeverity"
                                               Text="Failure Severity:"
                                               Grid.Row="4"
                                               Grid.Column="0"
                                               Margin="5,0,10,0"
                                               Foreground="{DynamicResource titleColor7}"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="CurrentFailureSeverity"
                                             Grid.Row="4"
                                             Grid.Column="1"
                                             Width="150"
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>