<UserControl x:Class="WPF_App.Views.AutomaticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:WPF_App.ViewModels"
             xmlns:views="clr-namespace:WPF_App.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:controls="http://schemas.xceed.com/wpf/xaml/toolkit"
             Width="1200" Height="1200">

    <UserControl.Resources>
        <Storyboard x:Key="RedLightBlinkStoryboard">
            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                            From="DarkGreen" 
                            To="Red"
                            Duration="0:0:0.3"
                            AutoReverse="True"
                            RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

