                                <Rectangle Height="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           Fill="#4471ce"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Margin="0,-3,0,10"/>
                                <Rectangle RadiusX="6"
                                           RadiusY="6"
                                           Fill="#f2f3f5"/>
                            </Grid>
                        </Border>

                        <!-- TextBlock Positioned at Top-Left -->
                        <StackPanel HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    Margin="-10, -5, 0, 0">
