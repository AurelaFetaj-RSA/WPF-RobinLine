                                    <!-- Text -->
                                    <TextBlock Text="Pause" 
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="50" Height="60"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Margin="-5,120,0,0"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- Icon -->
                                    <fa:IconImage Icon="Sync"
                                                  Width="30"
                                                  Height="30"
                                                  Foreground="White"/>

                                    <!-- Text -->
                                    <TextBlock Text="Reset" 
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Border Width="65" Height="60"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="-30,135,0,0"
                        VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TranslateTransform Y="50"/>
                        <!--Moves Up-->
                    </Border.RenderTransform>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Icon (Ellipse) -->
                        <Ellipse x:Name="StateIcon" Width="30" Height="30" Fill="White" Margin="0,0,0,0"/>

                        <!-- State Text below the icon -->
                        <TextBlock x:Name="StateText" Text="State" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                </Border>



                <Popup x:Name="ConfirmPopup" 
                       IsOpen="False" 
                       HorizontalAlignment="Left" 
                       AllowsTransparency="True"
                       VerticalAlignment="Top"
                       Placement="Bottom" 
                       PlacementTarget="{Binding ElementName=StartStopButton}" 
                       StaysOpen="False" 
                       HorizontalOffset="-50" 
                       VerticalOffset="-200">
                    <Border CornerRadius="15" Background="White" BorderBrush="Red" BorderThickness="0" Padding="10,25,10,10" Width="250" Height="100">
                        <StackPanel>
                            <!-- Confirmation Message -->
                            <TextBlock Text="{Binding ConfirmationMessage}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="12" 
                                       Foreground="#555555" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"/>

                            <!-- Buttons Panel -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Yes Button -->
                                <Button Content="Yes" 
                                        Click="YesButton_Click" 
                                        Margin="10,0" 
                                        Width="60" 
                                        Height="25" 
                                        FontSize="14" 
                                        FontWeight="Bold" 
                                        Background="#4CAF50" 
                                        Foreground="White" 
                                        BorderBrush="#388E3C" 
                                        BorderThickness="1" 
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- No Button -->
                                <Button Content="No" 
                                        Click="NoButton_Click" 
                                        Margin="10,0" 
                                        Width="60" 
                                        Height="25" 
                                        FontSize="14" 
                                        FontWeight="Bold" 
                                        Background="#F44336" 
                                        Foreground="White" 
                                        BorderBrush="#D32F2F" 
                                        BorderThickness="1" 
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>
    </Grid>
</UserControl>