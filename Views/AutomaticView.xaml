                                            FontSize="11" 
                                            FontWeight="Bold" 
                                            VerticalAlignment="Center" 
                                            Increment="1" 
                                            Value="0"
                                            Minimum="0" 
                                            Maximum="100"
                                            ValueChanged="Oven2LampsPercentageUpDown_ValueChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock Text="Fan Percentage" 
                               Margin="220,15,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>

                    <!--IntegerUpDown with arrows for increment and decrement-->
                    <controls:IntegerUpDown Width="43" 
                                            Margin="70,15,0,0" 
                                            FontSize="11" 
                                            FontWeight="Bold" 
                                            VerticalAlignment="Center" 
                                            Increment="1" 
                                            Value="0"
                                            Minimum="0" 
                                            Maximum="100"
                                            ValueChanged="Oven2FanPercentageUpDown_ValueChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock Text="Temperature setpoint" 
                               Margin="-16,40,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>

                    <!--IntegerUpDown with arrows for increment and decrement-->
                    <controls:IntegerUpDown Width="43" 
                                            Margin="40,40,0,0" 
                                            FontSize="11" 
                                            FontWeight="Bold" 
                                            VerticalAlignment="Center" 
                                            Increment="1" 
                                            Value="0"
                                            Minimum="0" 
                                            Maximum="100"
                                            ValueChanged="Oven2TempSetpointUpDown_ValueChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock Text="Temperature: " 
                               Margin="220,40,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>

                    <TextBlock Name="Oven2TemperatureTextBlock" 
                               Margin="5,40,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="11" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Border Width="65" Height="60"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="350,60,0,0"
                        VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TranslateTransform Y="0"/>
                        <!--Moves Up-->
                    </Border.RenderTransform>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Icon (Ellipse) -->
                        <Ellipse x:Name="Oven2StateIcon" Width="25" Height="25" Fill="White" Margin="5,0,0,0"/>

                        <!-- State Text below the icon -->
                        <TextBlock x:Name="Oven2StateText" 
                                   Text="State" 
                                   Foreground="{DynamicResource titleColor7}"
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,0"/>
                    </StackPanel>

                </Border>

                <Border Name="Oven2StatusBorder"
                        Width="22" 
                        Height="22"
                        CornerRadius="15"
                        Background="#f1f2f6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="275, 72, 0, 0">
                    <fa:IconImage Name="Oven2StatusIcon"
                                  Icon="Times"
                                  Width="14"
                                  Height="14"
                                  Foreground="red"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock Name="Oven2ReachedTextBlock"
                               Text="Reached" 
                               Margin="250,85,0,0" 
                               Foreground="{DynamicResource titleColor7}" 
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Border Width="25" Height="25"
                        CornerRadius="15"
                        Background="#f1f2f6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="335, 70, 0, 0">
                    <fa:IconImage x:Name="Oven2LampIcon"
                                  Icon="Lightbulb"
                                  Width="20"
                                  Height="20"
                                  Foreground="green"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock x:Name="ReadyOven2TextBlock"
                               Text="Ready" 
                               Margin="318,85,0,0" 
                               Foreground="{DynamicResource titleColor7}" 
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <ToggleButton x:Name="Oven2Toggle"
                              Width="35" Height="17" 
                              HorizontalAlignment="Left"
                              VerticalAlignment="Bottom"
                              Margin="-5, 0, 0, 15"
                              Background="Transparent"
                              Cursor="Hand"
                              BorderThickness="0"
                              Click="Oven2Toggle_Click">
                    <ToggleButton.RenderTransform>
                        <TranslateTransform Y="-15"/>
                    </ToggleButton.RenderTransform>
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid Width="35" Height="17">
                                <!-- Adjusted Grid size -->
                                <!-- Background Border -->
                                <Border x:Name="ToggleBackground"
                                        Width="35" Height="17" 
                                        CornerRadius="8"
                                        Background="Gray"/>

                                <!-- Toggle Thumb -->
                                <Ellipse x:Name="ToggleThumb"
                                         Width="15" Height="15"  
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2, 0, 0, 0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTransform"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>

                            <!-- Storyboard Animation -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="ToggleBackground" Property="Background" Value="#3f73d1"/>
                                    <Setter Property="RenderTransform" TargetName="ToggleThumb">
                                        <Setter.Value>
                                            <TranslateTransform X="16"/>
                                            <!-- Adjusted movement -->
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="ToggleBackground" Property="Background" Value="#d4dce5"/>
                                    <Setter Property="RenderTransform" TargetName="ToggleThumb">
                                        <Setter.Value>
                                            <TranslateTransform X="0"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock x:Name="Availability2TextBlock" 
                               Text="Availability"
                               Margin="-15,85,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border CornerRadius="10"
                Background="Transparent"
                Width="70"
                Height="290"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="400,-26,0,0">
            <Border.RenderTransform>
                <TranslateTransform X="70"/>
                <!--Moves Up-->
            </Border.RenderTransform>

            <Grid>

                <Border Background="#f1f2f6"
                        CornerRadius="0,0,3,3"
                        Margin="-19,73,15,-50">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="5"
                                          ShadowDepth="1"
                                          Opacity="0.6"/>
                    </Border.Effect>

                    <!-- Blue line at the top -->
                    <Grid>
                        <Rectangle Height="2"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Top"
                                   Fill="#4471ce"
                                   RadiusX="3"
                                   RadiusY="3"
                                   Margin="0,-3,0,10"/>
                        <Rectangle RadiusX="6"
                                   RadiusY="6"
                                   Fill="#f2f3f5"/>
                    </Grid>
                </Border>


                <Button Width="50" Height="60"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Click="StartStopButton_Click"
                        Margin="-5,85,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- Icon -->
                                    <fa:IconImage Icon="{Binding PlayStopIcon}"
                                                  Width="30"
                                                  Height="30"
                                                  Foreground="#3f73d1"/>

                                    <!-- Text -->
                                    <TextBlock Text="{Binding PlayStopText}" 
                                               Foreground="{DynamicResource titleColor7}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="50" Height="60"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Margin="-5,150,0,0"
                        Click="PauseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- Icon -->
                                    <fa:IconImage Icon="Pause"
                                                  Width="30"
                                                  Height="30"
                                                  Foreground="#3f73d1"/>

                                    <!-- Text -->
                                    <TextBlock Text="Pause" 
                                               Foreground="{DynamicResource titleColor7}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="50" Height="60"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Margin="-5,220,0,0"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- Icon -->
                                    <fa:IconImage Icon="Sync"
                                                  Width="30"
                                                  Height="30"
                                                  Foreground="#3f73d1"/>

                                    <!-- Text -->
                                    <TextBlock Text="Reset" 
                                               Foreground="{DynamicResource titleColor7}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Border Width="65" Height="60"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="-30,230,0,0"
                        VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TranslateTransform Y="50"/>
                        <!--Moves Up-->
                    </Border.RenderTransform>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Icon (Ellipse) -->
                        <Ellipse x:Name="StateIcon" Width="30" Height="30" Fill="#3f73d1" Margin="0,0,0,0"/>

                        <!-- State Text below the icon -->
                        <TextBlock x:Name="StateText" Text="State" 
                                   Foreground="{DynamicResource titleColor7}"
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                </Border>

                <Popup x:Name="ConfirmPopup" 
                       IsOpen="False" 
                       HorizontalAlignment="Left" 
                       AllowsTransparency="True"
                       VerticalAlignment="Top"
                       Placement="Bottom" 
                       PlacementTarget="{Binding ElementName=StartStopButton}" 
                       StaysOpen="False" 
                       HorizontalOffset="-50" 
                       VerticalOffset="-200">
                    <Border CornerRadius="15" Background="White" BorderBrush="Red" BorderThickness="0" Padding="10,25,10,10" Width="250" Height="100">
                        <StackPanel>
                            <!-- Confirmation Message -->
                            <TextBlock Text="{Binding ConfirmationMessage}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="12" 
                                       Foreground="#555555" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"/>

                            <!-- Buttons Panel -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Yes Button -->
                                <Button Content="Yes" 
                                        Click="YesButton_Click" 
                                        Margin="10,0" 
                                        Width="60" 
                                        Height="25" 
                                        FontSize="14" 
                                        FontWeight="Bold" 
                                        Background="#4CAF50" 
                                        Foreground="White" 
                                        BorderBrush="#388E3C" 
                                        BorderThickness="1" 
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- No Button -->
                                <Button Content="No" 
                                        Click="NoButton_Click" 
                                        Margin="10,0" 
                                        Width="60" 
                                        Height="25" 
                                        FontSize="14" 
                                        FontWeight="Bold" 
                                        Background="#F44336" 
                                        Foreground="White" 
                                        BorderBrush="#D32F2F" 
                                        BorderThickness="1" 
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>

        <Border x:Name="MessageBoxPanel"
                CornerRadius="5"
                Background="Transparent"
                Width="350"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                Margin="0,260,0,0">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="180" />
                    <TranslateTransform Y="75" />
                </TransformGroup>
            </Border.RenderTransform>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Image x:Name="MessageIcon" 
                           Width="15" 
                           Height="15" 
                           Margin="10,5,5,5"/>
                    <TextBlock x:Name="MessageText" 
                               FontSize="12" 
                               VerticalAlignment="Center" 
                               Margin="5,5,20,5" 
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Button Content="✖"
                        Background="Transparent"
                        Foreground="Gray"
                        BorderThickness="0"
                        FontSize="8"
                        Cursor="Hand"
                        Margin="5,0,10,0"
                        Click="CloseMessageBox"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>