                                      Cursor="Hand"
                                      BorderThickness="0"
                                      Click="Robot1Toggle_Click">
                            <ToggleButton.RenderTransform>
                                <TranslateTransform Y="-20"/>
                            </ToggleButton.RenderTransform>
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid Width="35" Height="17">
                                        <!-- Adjusted Grid size -->
                                        <!-- Background Border -->
                                        <Border x:Name="ToggleBackground"
                                                Width="35" Height="17" 
                                                CornerRadius="8"
                                                Background="Gray"/>

