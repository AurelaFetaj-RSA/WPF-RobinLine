             xmlns:controls="http://schemas.xceed.com/wpf/xaml/toolkit"
             Height="300" Width="500">
    <Grid>

        <Border CornerRadius="10"
                Background="Transparent"
                Width="170"
                Height="90"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="-10,0,0,0">
            <Border.RenderTransform>
                <TranslateTransform Y="-45"/>
                <!-- Moves Up -->
            </Border.RenderTransform>

            <Grid>
                <Border Background="#f1f2f6"
                        CornerRadius="0,0,3,3"
                        Margin="-19,-11,19,11">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                          BlurRadius="5"
                          ShadowDepth="1"
                          Opacity="0.6"/>
                    </Border.Effect>

                    <!-- Blue line at the top -->
                    <Grid>
                        <Rectangle Height="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="#4471ce"
                            RadiusX="3"
                            RadiusY="3"
                            Margin="0,-3,0,10"/>
                        <Rectangle RadiusX="6"
                                   RadiusY="6"
                                   Fill="#f2f3f5"/>
                    </Grid>
                </Border>

                <!-- TextBlock Positioned at Top-Left -->
                <StackPanel HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Margin="-10, -5, 0, 0">
                    <TextBlock x:Name="Robot1"
                               Text="Robot 1"
                               Foreground="{DynamicResource titleColor7}"
                               FontSize="15"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Padding="5, 0"/>
                    <Border Height="1.5"
                            Width="145"
                            Background="#2a3645" />
                </StackPanel>

                <Border Width="25" Height="25"
                        CornerRadius="15"
                        Background="#f1f2f6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="120, 35, 0, 0">
                    <fa:IconImage x:Name="ReadyLamp"
                                  Icon="Lightbulb"
                                  Width="20"
                                  Height="20"
                                  Foreground="#3f73d1"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0">
                    <TextBlock x:Name="ReadyRobot1TextBlock"
                               Text="Ready"
                               Margin="110,60,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <ToggleButton x:Name="Robot1Toggle"
                              Width="35" Height="17" 
                              HorizontalAlignment="Left"
                              VerticalAlignment="Bottom"
                              Margin="-10, 0, 0, 15"
                              Background="Transparent"
                              Cursor="Hand"
                              BorderThickness="0"
                              Click="Robot1Toggle_Click">
                    <ToggleButton.RenderTransform>
                        <TranslateTransform Y="-15"/>
                    </ToggleButton.RenderTransform>
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid Width="35" Height="17">
                                <!-- Adjusted Grid size -->
                                <!-- Background Border -->
                                <Border x:Name="ToggleBackground"
                                        Width="35" Height="17" 
                                        CornerRadius="8"
                                        Background="Gray"/>

                                <!-- Toggle Thumb -->
                                <Ellipse x:Name="ToggleThumb"
                                             Width="15" Height="15"  
                                             Fill="White"
                                             HorizontalAlignment="Left"
                                             Margin="2, 0, 0, 0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTransform"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>

                            <!-- Storyboard Animation -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="ToggleBackground" Property="Background" Value="#3f73d1"/>
                                    <Setter Property="RenderTransform" TargetName="ToggleThumb">
                                        <Setter.Value>
                                            <TranslateTransform X="16"/>
                                            <!-- Adjusted movement -->
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="ToggleBackground" Property="Background" Value="#d4dce5"/>
                                    <Setter Property="RenderTransform" TargetName="ToggleThumb">
                                        <Setter.Value>
                                            <TranslateTransform X="0"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <TextBlock x:Name="Robot1AvailabilityTextBlock"
                               Text="Availability" 
                               Margin="-20,50,0,0" 
                               Foreground="{DynamicResource titleColor7}"
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center"/>
                </StackPanel>

            </Grid>
        </Border>

