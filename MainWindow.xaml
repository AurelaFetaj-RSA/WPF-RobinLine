<Window x:Class="WPF_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App"
        xmlns:viewModel="clr-namespace:WPF_App.ViewModels"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Define the Date and Time TextBlock Style -->
        <Style x:Key="MenuDateTimeText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Varela Round"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Content section -->
                <ColumnDefinition Width="*"/>
                <!-- Navigation menu -->
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation menu -->
            <Border CornerRadius="0,10,10,0" Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource secondaryBackColor3}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor4}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <Border Padding="5"
                            CornerRadius="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Grid>
                            <!-- Dotted Border -->
                            <Rectangle Stroke="White"
                                       StrokeThickness="0.5"
                                       StrokeDashArray="6 6"
                                       RadiusX="10"
                                       RadiusY="10"
                                       Fill="Transparent"
                                       Margin="0,0,0,10"/>

                            <!-- Logo StackPanel -->
                            <StackPanel Orientation="Vertical"
                                        Height="70"
                                        Width="160"
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">

                                <Image Source="/Images/thumbnail_logo.rsa_solo.png" 
                                       Height="30"
                                       HorizontalAlignment="Center"/>

                                <!-- First Line -->
                                <TextBlock FontFamily="Arial Black"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center">
                                    <Run Text="ROBOT" Foreground="{StaticResource titleColor4}"/>
                                    <Run Text="SYSTEM" Foreground="{StaticResource titleColor5}"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" 
                                           Foreground="{StaticResource titleColor1}" 
                                           FontSize="10" 
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center">
                                    <Run Text="a" />
                                    <Run Text=" " />
                                    <Run Text="u" />
                                    <Run Text=" " />
                                    <Run Text="t" />
                                    <Run Text=" " />
                                    <Run Text="o" />
                                    <Run Text=" " />
                                    <Run Text="m" />
                                    <Run Text=" " />
                                    <Run Text="a" />
                                    <Run Text=" " />
                                    <Run Text="t" />
                                    <Run Text=" " />
                                    <Run Text="i" />
                                    <Run Text=" " />
                                    <Run Text="o" />
                                    <Run Text=" " />
                                    <Run Text="n" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color11}"
                                 IsChecked="True"
                                 Command="{Binding ShowAutomaticViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Sync" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Automatico" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowRecipesViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Book" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Ricette" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color3}"
                                 Command="{Binding ShowRFIDViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="BroadcastTower" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="RFID" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color4}"
                                 Command="{Binding ShowOrdersViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ClipboardList" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Commesse" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color5}"
                                 Command="{Binding ShowDeviceViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="MobileAlt" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dispositivi" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowSettingsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Cog" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Impostazioni" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color7}"
                                 Command="{Binding ShowDiagnosticsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="LaptopMedical" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Diagnostica" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowHideViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="EyeSlash" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Nascondi" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <Border CornerRadius="0,10,10,0" Grid.Column="1">
                        <StackPanel VerticalAlignment="Bottom" Margin="0,10">
                            <TextBlock x:Name="DateTimeText" 
                                       Style="{StaticResource MenuDateTimeText}" 
                                       VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Section -->
            <Border CornerRadius="10,0,0,10" Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource primaryBackColor3}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor4}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <ContentControl Content="{Binding CurrentView}" Margin="5"/>

                <!--<Grid Margin="5">-->
                    <!-- Example of a Dotted Container --><!--
                    <Border Padding="5"
                            CornerRadius="10"
                            Background="Transparent">
                        <Grid>
                            --><!-- Dotted Border --><!--
                            <Rectangle Stroke="White"
                                       StrokeThickness="0.5"
                                       StrokeDashArray="6 6"
                                       RadiusX="10"
                                       RadiusY="10"
                                       Fill="Transparent"/>

                            --><!-- Content inside the container --><!--
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Generator Status" 
                                          FontSize="16" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Status 01: Active"
                                          FontSize="12"
                                          Foreground="White"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            --><!-- Grid for left and right containers --><!--
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/> --><!-- Left container --><!--
                                    <ColumnDefinition Width="180"/> --><!-- Right container --><!--
                                </Grid.ColumnDefinitions>

                                --><!-- Left Container --><!--
                                <Border Padding="0,0,10,0" CornerRadius="10" Background="Transparent" Grid.Row="0" Grid.Column="0" Height="100" Margin="10,50,0,10">
                                    <Grid>
                                        <Rectangle Stroke="White" StrokeThickness="0.5" StrokeDashArray="6 6" RadiusX="10" RadiusY="10" Fill="Transparent"/>
                                        <StackPanel>
                                            <TextBlock Text="Left Container" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Details" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Content="Button" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                --><!-- Right Container --><!--
                                <Border Padding="0,0,10,0" CornerRadius="10" Background="Transparent" Grid.Row="0" Grid.Column="1" Height="100" Margin="0,50,0,10">
                                    <Grid>
                                        <Rectangle Stroke="White" StrokeThickness="0.5" StrokeDashArray="6 6" RadiusX="10" RadiusY="10" Fill="Transparent"/>
                                        <StackPanel>
                                            <TextBlock Text="Right Container" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Details" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                --><!-- Bottom Container --><!--
                                <Border Padding="10,0,10,10" CornerRadius="10" Background="Transparent" Grid.Row="1" Grid.ColumnSpan="2">
                                    <Grid>
                                        <Rectangle Stroke="White" StrokeThickness="0.5" StrokeDashArray="6 6" RadiusX="10" RadiusY="10" Fill="Transparent"/>
                                        <StackPanel>
                                            <TextBlock Text="Bottom Container" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Details" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>-->
                <!--</Grid>-->
            </Border>
        </Grid>
    </Border>
</Window>
